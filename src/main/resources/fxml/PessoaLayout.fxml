<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="450.0" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.joaops.demo.controller.PessoaLayoutController">
   <children>
      <FlowPane hgap="10.0" vgap="10.0">
         <children>
                <Label text="Nome" />
                <TextField fx:id="textFieldNome" />
                <Label text="Nascimento" />
                <DatePicker fx:id="datePickerNascimento" />
         </children>
      </FlowPane>
        <FlowPane hgap="10.0" vgap="10.0">
            <children>
                <Button mnemonicParsing="false" onAction="#create" text="Create" />
                <Button mnemonicParsing="false" onAction="#update" text="Update" />
                <Button mnemonicParsing="false" onAction="#delete" text="Delete" />
            <Button mnemonicParsing="false" onAction="#clear" text="Clear" />
            </children>
        </FlowPane>
        <TableView fx:id="tableViewPessoa" prefWidth="580.0">
            <columns>
                <TableColumn fx:id="tableColumnId" prefWidth="75.0" text="Id" />
                <TableColumn fx:id="tableColumnNome" prefWidth="75.0" text="Nome" />
                <TableColumn fx:id="tableColumnNascimento" prefWidth="75.0" text="Data de Nascimento" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <Pagination fx:id="pagination" prefHeight="50.0" prefWidth="200.0" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
